<!-- 最外层的盒子 -->
<view class="container">
  <!-- 菜谱图片 -->
  <swiper class="container_recipeimage" 
    indicator-dots="{{ true }}" 
    indicator-active-color="#f00"
    indicator-color="gray"
  >
    <swiper-item wx:for="{{detailInfo.menuPic_fileID}}" wx:key="_id">
        <image src="{{item}}"></image>
    </swiper-item>
  </swiper>
  <!-- 菜谱名称  作者  热门(浏览)  推荐度（也就是关注-和-收藏） -->
  <view class="container_info">
    <view class="container_info_recipename">
      <text>{{detailInfo.menuName}}</text>
    </view>
    <view class="container_info_recipedetail">
      <text>by {{detailInfo.userInfo.nickName}}</text>
      <text>{{detailInfo.follows}}人收藏</text>
      <text>{{detailInfo.views}}次浏览</text>
    </view>
  </view>
  <!-- 中间一条横线 -->
  <view class="fgx"></view>
  <!-- 做法 -->
  <view class="recipedetail">
    <text>{{detailInfo.menuText}}</text>
  </view>
  <!-- 关注按钮    分享朋友 -->
  <view class="container_bottom">
    <!-- 关注 -->
    <view class="guanzhu">
      <!-- 未关注 -->
      <block >
        <image bindtap='changeFollow' src="{{isFollow?'/static/index/tj1.png':'/static/index/tj.png'}}"></image>
        <text>{{isFollow?'已关注':'关注'}}</text>
      </block>
    </view>
    <!-- 分享给朋友 -->
    <view class="share" bindtap="toFriend">
      <image src="/static/index/share.png"></image>
      <text class="btn">分享给朋友</text>    
    </view>
  </view>
</view>